<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CoordinadorLayoutFactura"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <!-- Inicio de la Appbar -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/AppbarFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MiTema.AppBarOverlay">

        <!-- Inicio de la Toolbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/ToolbarFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- Fin de la Toolbar-->

    </android.support.design.widget.AppBarLayout>
    <!-- Fin de la Appbar -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">


            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/tvVoC"
                 android:layout_marginTop="15dp"
                 android:textStyle="bold"
                 android:textSize="24dp"/> -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del cliente: "
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/nombres"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/tvNombreCliente"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cédula del cliente: "
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/cedula"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/tvCedulaCliente"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono del cliente: "
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/telefono"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/tvTelefonoCliente"
                    />
            </LinearLayout>

            <!-- <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="15dp"
                     android:layout_marginBottom="18dp"
                     android:text="Dirección del cliente: "
                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginBottom="18dp"
                     android:layout_marginTop="15dp"
                     android:text=""
                     android:textStyle="bold"
                     android:id="@+id/tvDireccionCliente"
                     />
             </LinearLayout> -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compraventa: "
                    android:id="@+id/tvFacturaCompraventa"
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/compraventa"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/facturaCompraventa"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departamento: "
                    android:id="@+id/tvFacturaDepartamento"
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/ciudad"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/facturaDepartamento"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciudad: "
                    android:id="@+id/tvFacturaCiudad"
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/ciudad"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/facturaCiudad"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario: "
                    android:id="@+id/tvFacturaVendedor"
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/nombres"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/facturaVendedor"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de café: "
                    android:id="@+id/tvFacturaTipoCafe"
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/cafe"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/facturaTipoCafe"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilos Totales de la carga: "
                    android:id="@+id/tvFacturaKilosTotales"
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/peso"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/facturaKilosTotales"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Total a pagar: "
                    android:id="@+id/tvFacturaValorTotal"
                    android:padding="8dp"
                    android:background="#ffffff"
                    android:drawablePadding="16dp"
                    android:drawableLeft="@drawable/precio"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:id="@+id/facturaValorTotal"
                    />
            </LinearLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnFacturaImprimir"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="6dp"
                android:text="Imprimir"
                android:textColor="#ffffff"
                android:background="@drawable/btnpresionadocalculos"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"/>


        </LinearLayout>

    </ScrollView>


</android.support.design.widget.CoordinatorLayout>